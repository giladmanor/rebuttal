<!-- STANDARD POST -->
<article class="blog-wrap text-center">
	<div class="blog-media">
		<div class="he-wrap tpl2">
			<a href="/rebuttal/<%=@statement.id%>">
			<div style="width: 100%;height: 100px;background-color: gray;text-align: end;color: white;background-image: url(<%= @statement.user.social_info[:profile_background_image_url]%>)">
				<span> See Conversation <i class="fa fa-angle-right"></i></span>&nbsp;
			</div><!-- he wrap -->
			</a>
		</div>

		<header class="page-header blog-title">
			<div class="author-wrap" style="">
				<span class="inside"> <a href="#"><img class="img-responsive" alt="" src="<%= @statement.user.social_info[:profile_image_url]%>"></a> </span>
			</div>
			<h3 class="general-title"><%= @statement.title%></h3>
			<div class="post-meta">
				<p>
					Published <span class="publish-on"><%= time_ago_in_words(@statement.created_at)%> ago</span>
					<span class="sep">/</span> Debate: <a href="/rebuttal/<%=@statement.id%>"> <%=@statement.conversation_size%> Rebuttles</a>
				</p>
			</div>
		</header>

		<div class="post-desc">
			<p>
				<%= @statement.body%>
			</p>

		</div>
</article>
<script>
window.currentlyViewed = <%= @statement.rank%>
		



</script>

